<!-- res/drawable/background_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer for 3D effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A374D" /> <!-- Darker shade of blue-black for shadow -->
            <corners android:radius="12dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Main background with border -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">

            <gradient
                android:startColor="#8645F0"
                android:endColor="#8E62A8"
                android:angle="60"
                android:centerColor="#436A7C"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <!--            <solid android:color="#57B0D9" /> &lt;!&ndash; Blue-black color tone for background &ndash;&gt;-->
            <stroke android:width="2dp" android:color="#2F75C2" /> <!-- Blue-black color for border -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
